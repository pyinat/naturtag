<MetadataViewScreen>:
    name: 'metadata'

    BoxLayout:
        orientation: 'vertical'
        MDTabs:
            id: metadata_tabs
            background_color: app.theme_cls.primary_color

            Tab:
                text: 'Combined'
                TextInput:
                    id: combined
                    readonly: True
                    multiline: True
            Tab:
                text: 'Keywords'
                TextInput:
                    id: keywords
                    readonly: True
                    multiline: True
            Tab:
                text: 'EXIF'
                TextInput:
                    id: exif
                    readonly: True
                    multiline: True
            Tab:
                text: 'IPTC'
                TextInput:
                    id: iptc
                    readonly: True
                    multiline: True
            Tab:
                text: 'XMP'
                TextInput:
                    id: xmp
                    readonly: True
                    multiline: True
        StatusBar:
            id: status_bar
